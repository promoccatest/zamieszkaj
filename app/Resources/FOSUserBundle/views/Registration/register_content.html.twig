{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
<div class="register-area" style="background-color: rgb(249, 249, 249);">
    <div class="container">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="box-for overflow">
                <div class="col-md-12 col-xs-12 register-blocks">
                    <h2>Nowe konto : </h2>
                    <div class="form-group">
                        <label for="name">Login</label>
                        {{ form_widget(form.username, { "attr": {"class": "form-control", "id": "name"} }) }}
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        {{ form_widget(form.email, { "attr": {"class": "form-control", "id": "email"} }) }}
                    </div>
                    <div class="form-group">
                        <label for="password">Hasło</label>
                        {{ form_widget(form.plainPassword.first, { "attr": {"class": "form-control", "id": "password"} }) }}
                    </div>
                    <div class="form-group">
                        <label for="password-retype">Powtórz hasło</label>
                        {{ form_widget(form.plainPassword.second, { "attr": {"class": "form-control", "id": "password-retype"} }) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-default">Zarejestruj</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
{{ form_end(form) }}
